                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>                          
                    </button>
                      
                <%}%>
            <%}%>
              <h1 class="text-gray-900 text-3xl title-font font-medium mb-1"><%= post.title%></h1>
              <p class="leading-relaxed"><%= post.content%></p>
                <h4 class="text-lg text-indigo-500">Created<%= post.created%></h4>
                <h4 class="text-lg text-indigo-500">Updated<%= post.updated%></h4><br><br>
                <% if(locals.user){%>
                    <%if(reactStatus.length > 0){%>
                    <button onclick="likeAction('unlike')"class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500 ml-4"><br>
                        <svg fill="red" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                          <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
                        </svg>
                      </button>
                    <%}else{%>
                    <button onclick="likeAction('like')" class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500 ml-4" ><br>
                        <svg fill="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                          <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
                        </svg>
                      </button>
                <%}%><span class="ml-4">Total like(s): <%= post.like.length %></span> <%}%>
                <hr class="mt-2">
              <div class="flex">
                <% if(locals.user){%>
                    <div class="p-2 w-full">
                        <div class="relative">
                        <label for="comment" class="leading-7 text-sm text-gray-600">Comment</label>
